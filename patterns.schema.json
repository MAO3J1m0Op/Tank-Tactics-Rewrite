{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "colors": {
            "description": "List of all colors usable by tanks.",
            "type": "object",
            "additionalProperties": {
                "type": "string",
                "pattern": "^#[0-9A-F]{6}$",
                "description": "A hex code for a color."
            }
        },
        "patterns": {
            "description": "List of all patterns usable by tanks.",
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "description": "Display names of the pattern.",
                "properties": {
                    "generic": {
                        "type": "string",
                        "description": "Describes the pattern."
                    },
                    "colored": {
                        "type": "string",
                        "description": "Describes the pattern in reference to pattern's colors. Use \"$1\" and \"$2\" to reference the color names."
                    }
                },
                "additionalProperties": false
            }
        }
    }
}
